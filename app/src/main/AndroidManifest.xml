<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.thirdtry">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/MyTheme.DayNight">
        <activity android:name=".ui.activity.record.RecordActivity"></activity>
        <activity android:name=".ui.activity.getInformation.GetInformationActivity" />
        <activity android:name=".ui.activity.editInformation.EditInformationActivity" />
        <activity android:name=".ui.activity.firstPage.FirstPageActivity" />
        <activity android:name=".ui.activity.articleDetail.ArticleDetialActivity" />
        <activity android:name=".ui.activity.initialize.InitializeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.activity.register.RegisterActivity" />
        <activity android:name=".ui.activity.login.LoginActivity" />
        <activity
            android:name=".ui.activity.searchActivity.SearchActivity"
            android:label="@string/title_activity_search"
            android:theme="@style/MyTheme.DayNight.NoActionBar" />
        <activity android:name=".ui.activity.main.MainActivity" />
    </application>

</manifest>